{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Top Colours amongst the top 5 brands",
  "width":350,
  "height": 300,
  "data": {"url": "https://lpha0014.github.io/FIT3179USCars/USA_cars_datasets.csv"},
  "transform": 
  [{"filter":
  {"field": "brand", "oneOf": ["chevrolet","dodge","ford","nissan","bmw"]}},{"filter":{"field": "color", "oneOf": ["silver","black","gray","red","blue"]}}
  ],
  "layer":[
    {  "mark": "bar",
  "encoding": {
    "order": {"aggregate": "sum","field": "price"},
    "tooltip": [
      {"field": "color", "type": "nominal", "title": "Colour"},{"aggregate": "sum","field": "price", "type": "quantitative", "title": "Price (sum)", "format" : "$"}],
    "y": {"aggregate": "sum", "field": "price","axis": {"grid": false},      "stack":  "normalize", "title": "Normalised (%)"},
    "x": {"field": "brand", "sort":"-y"},
    "color": {"field": "color","type": "nominal", "title": "Popular Colours",
    "scale": {"type": "threshold","domain": ["silver","black","gray","red","blue"],"range":["silver","black","gray","red","#2c7fb8"]},"legend": null}
}}
  ]
,
  "config": {
    "font": "Franklin Gothic Book",
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
